    <update id="update" parameterType="com.dupake.commodityserver.entity.SysUser">
        update t_user
        <set>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from t_user where id = {id}
    </delete>

