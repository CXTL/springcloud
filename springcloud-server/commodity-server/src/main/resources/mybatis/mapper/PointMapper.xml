<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dupake.commodityserver.mapper.PointMapper">


    <resultMap id="authUserMap" type="com.dupake.commodityserver.entity.Point">
        <id column="id" property="id"></id>
        <result property="userId" column="user_id" />
        <result property="orderNo" column="order_no" />
        <result property="remarks" column="remarks" />
        <result property="points" column="points" />
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

    </resultMap>

    <sql id="authUser_sql">
        id,
                    user_id ,
                    order_no ,
                    remarks ,
                    points ,
                    create_time,
                    update_time
    </sql>

    <!--新增-->
    <insert id="insert" parameterType="com.dupake.commodityserver.entity.Point" useGeneratedKeys="true" keyProperty="id">
        insert into t_points(
        <trim suffixOverrides=",">
            <if test="createTime != null">
                create_time ,
            </if>
            <if test="updateTime != null">
                update_time ,
            </if>
            <if test="userId != null and userId != ''">
                user_id ,
            </if>
            <if test="orderNo != null and orderNo != ''">
                order_no ,
            </if>
            <if test="remarks != null and remarks != ''">
                remarks ,
            </if>
            <if test="points != null and points != ''">
                points ,
            </if>
        </trim>
        )
        values (
        <trim suffixOverrides=",">
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="userId != null and userId != ''">
                #{userId},
            </if>
            <if test="orderNo != null and orderNo != ''">
                #{orderNo},
            </if>
            <if test="remarks != null and remarks != ''">
                #{remarks},
            </if>
            <if test="points != null and points != ''">
                #{points},
            </if>
        </trim>

        )
    </insert>

    <select id="getByOrderNo" resultType="int">
            select count(1) from t_points where order_no = #{orderNo}
    </select>

</mapper>